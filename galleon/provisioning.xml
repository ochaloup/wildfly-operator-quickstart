<?xml version="1.0" ?>

<installation xmlns="urn:jboss:galleon:provisioning:3.0">
    <feature-pack location="eap-s2i@maven(org.jboss.universe:s2i-universe)">
        <default-configs inherit="false"/>
        <packages inherit="false"/>
    </feature-pack>
    <!--<feature-pack location="org.wildfly:wildfly-datasources-galleon-pack:1.0.5.CD.Alpha2">-->
    <!--<feature-pack location="org.wildfly:wildfly-datasources-galleon-pack:1.0.6.CD.Alpha2-SNAPSHOT">-->
    <feature-pack location="org.wildfly:wildfly-datasources-galleon-pack:1.0.7.CD.Final-SNAPSHOT">
        <default-configs inherit="false"/>
        <packages inherit="false"/>
    </feature-pack>
    <config model="standalone" name="standalone.xml">
        <layers>
            <include name="cloud-server"/>
            <include name="oracle-datasource"/>
            <include name="postgresql-driver"/>
        </layers>
    </config>
    <options>
        <option name="optional-packages" value="passive+"/>
    </options>
</installation>
